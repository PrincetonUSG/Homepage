---
import type { ImageMetadata } from "astro";
import Image from "astro/components/Image.astro";
import GithubIcon from "../assets/icons/github-mark.svg";
import WebIcon from "./icons/WebIcon.astro";

interface Props {
    name: string;
    title: string;
    position: string;
    website: string;
    github: string;
    headshot: ImageMetadata;
}

const { name, title, position, website, github, headshot } = Astro.props;
---

<div class="text-center mx-auto">
    <Image
        class="rounded-md shadow-sm mb-2"
        src={headshot}
        alt={`${name}'s picture`}
    />
    <div class="flex items-center justify-center gap-4">
        <h5 class="text-secondary">
            {name}
        </h5>
        {github && (
            <a href={github} target="_blank" rel="noopener noreferrer">
                <Image height="24" width="24" src={GithubIcon} alt="GitHub Icon" />
            </a>
        )}
        {website && (
            <a href={website} target="_blank" rel="noopener noreferrer">
                <WebIcon />
            </a>
        )}
    </div>
    <div class="italic">
        <p>
            {title}
        </p>
        <p>
            {position}
        </p>
    </div>
</div>
