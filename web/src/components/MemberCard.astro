---
import type { ImageMetadata } from "astro";
import Image from "astro/components/Image.astro";
import GithubIcon from "../assets/icons/github-mark.svg";

interface Props {
    name: string;
    title: string;
    position: string;
    website: string;
    github: string;
    headshot: ImageMetadata;
}

const { name, title, position, website, github, headshot } = Astro.props;
---

<div class="w-36 text-center mx-auto">
    <Image
        class="rounded-md shadow-sm mb-2"
        src={headshot}
        alt={`${name}'s picture`}
    />
    <div class="flex items-center gap-2">
        <p class="font-semibold text-secondary">
            {name}
        </p>
        <a href={github} target="_blank" rel="noopener noreferrer">
            <Image height="24" width="24" src={GithubIcon} alt="GitHub Icon" />
        </a>
        <div class="italic text-sm">
            <p>
                {title}
            </p>
            <p>
                {position}
            </p>
        </div>
    </div>
</div>
