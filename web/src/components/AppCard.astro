---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
    title: string;
    description: string;
    note: string;
    webLink: string;
    repoLink: string;
    screenshot: ImageMetadata;
    alt: string;
}

const { title, description, note, webLink, repoLink, screenshot, alt } =
    Astro.props;
---

<article class="space-y-2">
    <a href={webLink} target="_blank">
        <Image src={screenshot} {alt} class="rounded-lg shadow-lg" />
    </a>
    <div>
        <a href={webLink} target="_blank">
            <h4>
                {title}
            </h4>
        </a>
        <div class="italic">
            <p>
                {description}
            </p>
            {note && <p>{note}</p>}
        </div>
    </div>
</article>
