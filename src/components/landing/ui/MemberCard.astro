---
import type { ImageMetadata } from "astro";
import Image from "astro/components/Image.astro";
import GithubIcon from "../../../assets/icons/github-mark.svg";
import WebIcon from "../../icons/WebIcon.astro";

interface Props {
    name: string;
    title: string;
    position: string;
    website: string;
    github: string;
    headshot: ImageMetadata;
}

const { name, title, position, website, github, headshot } = Astro.props;
---

<div class="text-center mx-auto">
    <Image
        class="rounded-lg shadow-lg mb-1 aspect-square object-cover border"
        src={headshot}
        alt={`${name}`}
    />
    <div class="mt-2">
        <h5 class="text-sm sm:text-lg">
            {name}
        </h5>
        <p class="italic text-sm sm:text-base">
            {title}
        </p>
        <p class="italic text-sm sm:text-base">
            {position}
        </p>
        <div class="flex items-center justify-center gap-4">
            {
                github && (
                    <a href={github} target="_blank" rel="noopener noreferrer">
                        <Image
                            height="20"
                            width="20"
                            src={GithubIcon}
                            alt="GitHub Icon"
                        />
                    </a>
                )
            }
            {
                website && (
                    <a
                        href={website}
                        aria-label={`${name}'s personal website`}
                        target="_blank"
                        rel="noopener noreferrer">
                        <WebIcon />
                    </a>
                )
            }
        </div>
    </div>
</div>
