---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import GithubIcon from "../../../assets/icons/github-mark.svg";

interface Props {
    title: string;
    description: string;
    note: string;
    webLink: string;
    repoLink: string;
    screenshot: ImageMetadata;
    alt: string;
}

const { title, description, note, webLink, repoLink, screenshot, alt } =
    Astro.props;
---

<article class="space-y-2">
    <a href={webLink} target="_blank">
        <Image src={screenshot} {alt} class="rounded-lg shadow-lg" />
    </a>
    <div>
        <a href={webLink} target="_blank">
            <h4>
                {title}
            </h4>
        </a>
        <div class="italic">
            <p>
                {description}
            </p>
            {note && <p>{note}</p>}
            <span>
                {
                    repoLink && (
                        <a
                            class="inline-block"
                            href={repoLink}
                            target="_blank"
                            rel="noopener noreferrer">
                            <Image
                                height="20"
                                width="20"
                                src={GithubIcon}
                                alt="GitHub Icon"
                            />
                        </a>
                    )
                }
            </span>
        </div>
    </div>
</article>
