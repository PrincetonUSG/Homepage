import TigerDrawImage from "../../assets/apps/tigerdraw.webp";
import PrincetonRoomsImage from "../../assets/apps/princetonrooms.webp";

type App = {
    title: string;
    description: string;
    note: string;
    webLink: string;
    repoLink: string;
    screenshot: ImageMetadata;
    alt: string;
};

