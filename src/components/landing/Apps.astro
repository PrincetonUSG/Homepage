---

<section id="apps" class="py-16">
    <div class="cont space-y-12">
        <AppSection
            title="AI Assistant"
            description="Ask me anything about Princeton and campus life."
            cards={aiAssistApps}
        />
        <AppSection
            title="Course Planning"
            description="Plan your schedule and get notifications when spots open up."
            cards={coursePlanningApps}
        />
        <AppSection
            title="Campus Life"
            description="Prepare for Room Draw, stay active, and meet new friends over food."
            cards={campusLifeApps}
        />
        <AppSection
            title="Room Draw"
            description="Plan your room draw strategy and find the perfect room."
            cards={roomDrawApps}
        />

        <p class="text-lg text-center">
            You can check out some of our older apps in the
            <a class="text-secondary underline" href="/archive"> Archive</a>.
        </p>
    </div>
</section>
