---
import Layout from "../layouts/Layout.astro";

import LandingHeader from "../components/page/LandingHeader.astro";
import Hero from "../components/landing/Hero.astro";
import Apps from "../components/landing/Apps.astro";
import DevelopInfo from "../components/landing/DevelopInfo.astro";
import Members from "../components/landing/Members.astro";
import Footer from "../components/page/Footer.astro";
---

<Layout>
    <LandingHeader />
    <Hero />
    <Apps />
    <DevelopInfo />
    <Members />
    <Footer />
</Layout>

<style lang="postcss">
    section {
        scroll-margin: 4rem;
    }

    .link-button {
        @apply bg-secondary text-on-secondary rounded-lg p-2;
    }
</style>
